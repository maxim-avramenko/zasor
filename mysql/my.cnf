[mysqld]

# Под нагрузку небольшого веб-приложения
max_connections = 30
thread_cache_size = 8
table_open_cache = 300

# InnoDB — уменьшаем, чтобы хватило памяти PHP
innodb_buffer_pool_size = 320M
innodb_buffer_pool_instances = 1
innodb_log_file_size = 64M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

# Временные таблицы
tmp_table_size = 32M
max_heap_table_size = 32M

# Буферы на соединение (важно держать маленькими)
sort_buffer_size = 1M
join_buffer_size = 1M
read_buffer_size = 512K
read_rnd_buffer_size = 512K

# Кэш (в MySQL 8 отключён по умолчанию, фиксируем явно)
query_cache_type = 0
query_cache_size = 0

# Логи
slow_query_log = 1
long_query_time = 2